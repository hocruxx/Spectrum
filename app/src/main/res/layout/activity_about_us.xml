<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo4"
                android:id="@+id/imageView"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_main"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/bg1"
                        android:id="@+id/imageView5"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/lead"
                        android:id="@+id/imageView2"
                        android:scaleType="centerCrop"/>

                    <TextView android:text="Pramudya Erviansyah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#303030"
                        android:textSize="18dp"
                        android:id="@+id/name1" />


                    <TextView android:text="Lead Developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:layout_gravity="center"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_main2"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/bg1"
                        android:id="@+id/imageView6"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/maintain"
                        android:id="@+id/imageView3" />

                    <TextView android:text="Adinugroho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#303030"
                        android:textSize="18dp"
                        android:id="@+id/name2" />


                    <TextView android:text="Maintainers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="16dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_main3"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/bg1"
                        android:id="@+id/imageView7"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/graphic"
                        android:id="@+id/imageView4"
                        android:scaleType="centerCrop" />

                    <TextView android:text="Tito Anugerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#303030"
                        android:textSize="18dp"
                        android:id="@+id/name3" />


                    <TextView android:text="Graphic Engineer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="150dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <View android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"
                    android:background="#ffff"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"/>

                <TextView android:text="Notify Us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffff"
                    android:layout_gravity="top|center"/>

                <View android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:background="#ffff"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"/>

                <TextView android:text="Versi aplha.1.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#ffff"
                    android:layout_gravity="top|center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>


        </LinearLayout>
            </ScrollView>
        </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/item_navigasi" />

    </android.support.v4.widget.DrawerLayout>
